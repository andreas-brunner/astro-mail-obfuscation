{
  "name": "astro-mail-obfuscation",
  "version": "2.1.0",
  "description": "Obfuscates email addresses and phone numbers in the source code to protect against scraping bots. Decodes and displays them client-side using JavaScript.",
  "homepage": "https://www.npmjs.com/package/astro-mail-obfuscation",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreas-brunner/astro-mail-obfuscation"
  },
  "author": "Andreas Brunner <opensource@brunner-andreas.de>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "astro",
    "astro-component",
    "astro-integration",
    "withastro",
    "email-obfuscation",
    "email-protection",
    "spam-protection",
    "bot-protection",
    "email-security",
    "security",
    "obfuscation",
    "encoding",
    "utils",
    "utility"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/scripts && cp -r src/scripts/* dist/scripts/ && terser dist/index.js -o dist/index.js && terser dist/scripts/decodation.js -o dist/scripts/decodation.js"
  },
  "peerDependencies": {
    "astro": ">=4.0.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "globby": "^14.0.2"
  },
  "devDependencies": {
    "eslint": "^9.13.0",
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.11.0",
    "snyk": "^1.1294.0",
    "typescript": "^5.6.3",
    "@types/node": "^22.7.7",
    "terser": "^5.36.0"
  }
}
